# ============================================================================
# LEVEL 14: BACKEND ARCHITECTURE ENVIRONMENT VARIABLES
# Copy this file to .env.local and fill in your values
# ============================================================================

# ============================================================================
# DATABASE (Required)
# ============================================================================

# PostgreSQL connection string
# For Supabase: postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres
# For Vercel Postgres: Get from Vercel Dashboard > Storage > Postgres
DATABASE_URL="postgresql://user:password@localhost:5432/flowent_ai"

# ============================================================================
# CLERK AUTHENTICATION (Required)
# Get these from https://dashboard.clerk.com
# ============================================================================

# Publishable Key (starts with pk_)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."

# Secret Key (starts with sk_)
CLERK_SECRET_KEY="flwnt_test_..."

# Auth URLs (optional - defaults shown)
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/dashboard"

# ============================================================================
# SERVER-SIDE API KEYS (Optional)
# These are used by the server, not exposed to clients
# ============================================================================

# Tavily API Key - for web search functionality
# Get from: https://tavily.com
TAVILY_API_KEY=""

# Sentry (Error Tracking)
SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# ============================================================================
# CLIENT-SIDE BYO KEYS (Stored in User's LocalStorage)
# These are NOT environment variables - users provide their own keys
# via the Settings > API Keys page
# ============================================================================

# Users will input these in the dashboard:
# - OpenAI API Key (sk-...)
# - Resend API Key (re_...)
# - Slack Webhook URL (https://hooks.slack.com/services/...)

# ============================================================================
# REDIS (Optional - for caching/sessions)
# ============================================================================

# Redis connection string
# For Upstash: Get from https://console.upstash.com
REDIS_URL=""

# ============================================================================
# NEXT.JS
# ============================================================================

# Environment
NODE_ENV="development"

# Backend port for local development
BACKEND_PORT="4000"
