# =============================================================================
# Flowent AI Studio - Environment Configuration
# =============================================================================
#
# Copy this file to .env and fill in the values
#   cp .env.example .env
#
# IMPORTANT: Never commit .env to version control!
#
# =============================================================================

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=production
LOG_LEVEL=info

# Frontend Configuration
FRONTEND_PORT=3000
NEXT_PUBLIC_APP_NAME="Flowent AI Studio"
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_WS_URL=ws://localhost:4000

# Backend Configuration
BACKEND_PORT=4000
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=flowent
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=flowent_db

# Full connection URL (constructed from above, or override directly)
DATABASE_URL=postgresql://flowent:your_secure_password_here@localhost:5432/flowent_db?schema=public

# =============================================================================
# REDIS (Queue & Cache)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Full connection URL (constructed from above, or override directly)
REDIS_URL=redis://:your_redis_password_here@localhost:6379

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# JWT Configuration
# Generate with: openssl rand -base64 64
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long_for_security
JWT_EXPIRES_IN=7d

# Session Secret
# Generate with: openssl rand -base64 32
SESSION_SECRET=your_session_secret_at_least_32_characters

# Encryption Key (for sensitive data in database)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your_32_byte_hex_encryption_key_here_64_characters

# Two-Factor Authentication Secret (TOTP)
# Generate with: openssl rand -base64 32
MFA_SECRET=your_mfa_secret_key

# =============================================================================
# AI PROVIDERS
# =============================================================================
# OpenAI (Required for AI features)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4000

# Anthropic Claude (Optional - for additional AI capabilities)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Workflow AI Configuration
WORKFLOW_AI_MODEL=gpt-4o
WORKFLOW_AI_MAX_TOKENS=4000
WORKFLOW_AI_TEMPERATURE=0.3

# =============================================================================
# INTEGRATIONS (Optional)
# =============================================================================

# Google OAuth (for Google integrations)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:4000/api/oauth/google/callback

# HubSpot (for CRM integration)
HUBSPOT_CLIENT_ID=your_hubspot_client_id
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret
HUBSPOT_REDIRECT_URI=http://localhost:4000/api/oauth/hubspot/callback

# Salesforce (for CRM integration)
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret
SALESFORCE_REDIRECT_URI=http://localhost:4000/api/oauth/salesforce/callback

# Slack (for notifications)
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
SLACK_SIGNING_SECRET=your_slack_signing_secret

# SendGrid (for email delivery)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME="Flowent AI Studio"

# Twilio (for SMS/Voice)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# WORKER CONFIGURATION
# =============================================================================
WORKER_MODE=false
WORKER_CONCURRENCY=5
WORKER_MAX_RETRIES=3
WORKER_RETRY_DELAY=5000
WORKER_JOB_TIMEOUT=300000

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
ENABLE_METRICS=true
ENABLE_SWAGGER=false

# Sentry (Error Tracking)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project

# Grafana/Prometheus (Optional)
METRICS_PORT=9090

# =============================================================================
# FILE STORAGE
# =============================================================================
# Local storage (default)
STORAGE_TYPE=local
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# AWS S3 (Optional - for cloud storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=flowent-uploads

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT=1000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_REGISTRATION=true
ENABLE_GOOGLE_AUTH=true
ENABLE_HUBSPOT_INTEGRATION=true
ENABLE_AI_ARCHITECT=true
ENABLE_WORKFLOW_EXECUTION=true

# =============================================================================
# DEVELOPMENT ONLY (Do not use in production)
# =============================================================================
# DEBUG=*
# DISABLE_AUTH=false
# MOCK_AI_RESPONSES=false
