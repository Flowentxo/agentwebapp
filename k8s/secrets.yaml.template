# ============================================
# Kubernetes Secrets Template
# IMPORTANT: DO NOT commit this file with actual values
# Use: kubectl create secret generic brain-ai-secrets --from-env-file=.env.production
# ============================================

apiVersion: v1
kind: Secret
metadata:
  name: brain-ai-secrets
  namespace: brain-ai
type: Opaque
stringData:
  # Database
  DATABASE_URL: "postgresql://postgres:YOUR_PASSWORD@brain-ai-postgres:5432/brain_ai"
  POSTGRES_PASSWORD: "YOUR_POSTGRES_PASSWORD"

  # Redis
  REDIS_URL: "redis://:YOUR_REDIS_PASSWORD@brain-ai-redis:6379"
  REDIS_PASSWORD: "YOUR_REDIS_PASSWORD"

  # OpenAI
  OPENAI_API_KEY: "sk-YOUR_OPENAI_KEY"

  # JWT
  JWT_SECRET: "YOUR_JWT_SECRET_MIN_32_CHARS"
  JWT_REFRESH_SECRET: "YOUR_JWT_REFRESH_SECRET_MIN_32_CHARS"

  # Session
  SESSION_SECRET: "YOUR_SESSION_SECRET_MIN_32_CHARS"

  # Encryption
  ENCRYPTION_KEY: "YOUR_ENCRYPTION_KEY_32_CHARS"
