# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Model Configuration
# Verwende gpt-4 oder gpt-4-turbo-preview für präzise Finanzanalysen
MODEL_NAME=gpt-4-turbo-preview

# Agent Configuration
AGENT_NAME=Dexter
AGENT_ROLE=Financial Analyst

# Model Parameters
# Temperature auf 0.0 für konsistente, deterministische Berechnungen
TEMPERATURE=0.0
MAX_TOKENS=4096

# Directory Configuration
DATA_DIR=./data
REPORTS_DIR=./reports

# Financial Analysis Thresholds
# ROI Thresholds (in Prozent)
ROI_EXCELLENT_THRESHOLD=20.0
ROI_GOOD_THRESHOLD=10.0
ROI_ACCEPTABLE_THRESHOLD=5.0

# Profitability Ratios (in Prozent)
GROSS_MARGIN_HEALTHY=40.0
NET_MARGIN_HEALTHY=15.0
OPERATING_MARGIN_HEALTHY=20.0

# Liquidity Ratios
CURRENT_RATIO_HEALTHY=2.0
QUICK_RATIO_HEALTHY=1.0

# Leverage Ratios
DEBT_TO_EQUITY_HEALTHY=1.5
DEBT_TO_ASSETS_HEALTHY=0.5

# Sales Forecast Configuration
FORECAST_CONFIDENCE_THRESHOLD=0.75
MIN_DATA_POINTS_FOR_FORECAST=3

# Output Configuration
DECIMAL_PLACES=2
CURRENCY_SYMBOL=€
DATE_FORMAT=%Y-%m-%d

# Logging
LOG_LEVEL=INFO
ENABLE_DEBUG_MODE=False
