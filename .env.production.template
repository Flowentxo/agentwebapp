# ============================================
# Brain AI - Production Environment Template
# ============================================
# Copy this file to .env.production and fill in the values
# NEVER commit .env.production to version control

# ============================================
# Application
# ============================================
NODE_ENV=production
PORT=3000
NEXT_TELEMETRY_DISABLED=1

# Public URLs
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_WS_URL=wss://ws.yourdomain.com

# ============================================
# Database (PostgreSQL)
# ============================================
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@your-db-host:5432/brain_ai

# Individual components (if not using DATABASE_URL)
DB_HOST=your-db-host
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=YOUR_STRONG_PASSWORD
DB_NAME=brain_ai
DB_POOL_SIZE=20

# ============================================
# Redis Cache
# ============================================
REDIS_URL=redis://:YOUR_REDIS_PASSWORD@your-redis-host:6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD
REDIS_TTL=3600

# ============================================
# OpenAI API
# ============================================
OPENAI_API_KEY=sk-YOUR_OPENAI_API_KEY
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# ============================================
# Authentication & Security
# ============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=YOUR_JWT_SECRET_MIN_32_CHARACTERS_RANDOM_STRING
JWT_REFRESH_SECRET=YOUR_JWT_REFRESH_SECRET_MIN_32_CHARACTERS_RANDOM_STRING
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Session secret (min 32 characters)
SESSION_SECRET=YOUR_SESSION_SECRET_MIN_32_CHARACTERS_RANDOM_STRING

# Encryption key for sensitive data (exactly 32 characters)
ENCRYPTION_KEY=YOUR_32_CHAR_ENCRYPTION_KEY_HERE

# CSRF protection
CSRF_SECRET=YOUR_CSRF_SECRET_MIN_32_CHARACTERS_RANDOM_STRING

# ============================================
# Monitoring & Logging
# ============================================
# Sentry (Error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# ============================================
# Performance & Caching
# ============================================
# Enable/disable features
ENABLE_REDIS_CACHE=true
ENABLE_BROWSER_CACHE=true
ENABLE_QUERY_CACHE=true

# Cache TTLs (in seconds)
QUERY_CACHE_TTL=3600
CONTEXT_CACHE_TTL=7200
EMBEDDING_CACHE_TTL=86400

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CORS Configuration
# ============================================
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# Email (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com

# ============================================
# Monitoring URLs
# ============================================
GRAFANA_URL=https://grafana.yourdomain.com
PROMETHEUS_URL=https://prometheus.yourdomain.com

# ============================================
# Deployment
# ============================================
DEPLOY_ENVIRONMENT=production
DEPLOY_REGION=us-east-1
K8S_NAMESPACE=brain-ai
